{
  "version": 2,
  "buildCommand": "cd client && npm install && npx vite build",
  "outputDirectory": "dist/public",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/generate-message.js": {
      "maxDuration": 30
    }
  }
}